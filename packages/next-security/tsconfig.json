{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@nartix/next-security": ["src/index.ts"],
      "@nartix/next-security/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "build/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
