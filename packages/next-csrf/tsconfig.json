{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@nartix/next-csrf": ["src/index.ts"],
      "@nartix/next-csrf/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["dist", "*.js", "*.d.ts", "node_modules"]
}
