{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@nartix/next-csrf": ["src/index.ts"],
      "@nartix/next-csrf/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "build/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
