{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@nartix/next-middleware-chain": ["src/index.ts"],
      "@nartix/next-middleware-chain/*": ["src/*"]
    }
  },
  "include": [ "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "build/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}